doctype html
head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Document
    // owl-Carousel
    link(rel="stylesheet" href="./css/owl.carousel.css")
    link(rel="stylesheet" href="./css/owl.theme.default.min.css")
    // Custom Style
    link(rel="stylesheet" href="./css/style.css")
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css")
header
    // ----------------------------  Navigation ----------------------------------------------
    nav(class="nav")
        div(class="nav-menu flex-row")
            div(class="nav-brand")
                a(href="#" class="text-gray")  BLOGGER 
            div(class="toggle-collapse")
                div(class="toggle-icons")
                    i(class="fa fa-bars")
            ul(class="nav-items")
                li(class="nav-link")
                    a(href="#") Home
                li(class="nav-link")
                    a(href="#") Category
                li(class="nav-link")
                    a(href="#") Archive
                li(class="nav-link")
                    a(href="#") Pages
                li(class="nav-link")
                    a(href="#") Contact
        div(class="social text-gray")
            a(href="#")
                i(class="fa fa-facebook")
            a(href="#")
                i(class="fa fa-instagram")
            a(href="#")
                i(class="fa fa-twitter")
            a(href="#")
                i(class="fa fa-youtube")
    // ------------x---------------  Navigation --------------------------x-------------------
    // ---------------------- Hero --------------------
    section(class="hero")
        div(class="center" data-aos="fade-up" data-aos-delay="100")
            h3 Tours & Travels
            h1 Amazing Place on Earth
            button(class="btn") Explore
    // ----------x----------- Hero ----------x---------
main
    // --------------------------- Main Site Section ----------------------------
    // --------------------- Blog Carousel -----------------
    section
        div(class="blog")
            div(class="container")
                div(class="owl-carousel owl-theme blog-post")
                    article(class="blog-content" data-aos="fade-right" data-aos-delay="200")
                        img(src="../../assets/post/post-1.jpg" alt="post-1")
                        div(class="blog-title")
                            h3 London Fashion week's continued the evolution
                            button(class="btn btn-blog") Fashion
                            span 2 minutes
                    article(class="blog-content" data-aos="fade-in" data-aos-delay="200")
                        img(src="../../assets/post/post-3.jpg" alt="post-1")
                        div(class="blog-title")
                            h3 London Fashion week's continued the evolution
                            button(class="btn btn-blog") Fashion
                            span 2 minutes
                    article(class="blog-content" data-aos="fade-left" data-aos-delay="200")
                        img(src="../../assets/post/post-2.jpg" alt="post-1")
                        div(class="blog-title")
                            h3 London Fashion week's continued the evolution
                            button(class="btn btn-blog") Fashion
                            span 2 minutes
                    article(class="blog-content" data-aos="fade-right" data-aos-delay="200")
                        img(src="../../assets/post/post-5.png" alt="post-1")
                        div(class="blog-title")
                            h3 London Fashion week's continued the evolution
                            button(class="btn btn-blog") Fashion
                            span 2 minutes
                div(class="owl-navigation")
                    span(class="owl-nav-prev")
                        i(class="fa fa-angle-double-left")
                    span(class="owl-nav-next")
                        i(class="fa fa-angle-double-right")
    // ----------x---------- Blog Carousel --------x--------
// ---------------------- Site Content ------------------------
// Jquery library File
script(src="./js/jquery-3.5.1.min.js")
// --------- Owl-Carousel js -----------------
script(src="./js/owl.carousel.min.js")
// Custom Javascript file
script(src="./js/main.js")
